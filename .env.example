# AI Construction Measurement Extractor - Environment Configuration

# Google Cloud Platform Settings
# Path to your GCP service account credentials JSON file
GOOGLE_APPLICATION_CREDENTIALS=./gcp-vision-key.json

# Password for encrypted GCP credentials (if using encryption)
GCP_DECRYPT_PASSWORD=your_strong_password_here

# GCP Project ID (optional, for reference)
GCP_PROJECT_ID=your-gcp-project-id

# OpenAI API Settings (Optional - for enhanced parsing)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Settings
GRADIO_SHARE=False
GRADIO_DEBUG=True

# OCR Service Configuration
# Options: 'gcp' (recommended), 'easyocr' (fallback)
OCR_SERVICE=gcp
OCR_CONFIDENCE_THRESHOLD=0.3

# Processing Settings
MAX_WORKERS=4
MAX_FILE_SIZE_MB=10

# Output Settings
DEFAULT_OUTPUT_FORMATS=text,json,csv
ENABLE_INDIVIDUAL_JSON=true

# Advanced Settings
USE_OPENAI_FALLBACK=true
ENABLE_MEASUREMENT_VALIDATION=true
LOG_LEVEL=INFO